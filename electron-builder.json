{
  "appId": "com.example.comsc",
  "productName": "COMSC",
  "directories": {
    "output": "release"
  },
  "files": [
    "main.js",
    "dist/**/*",
    "control/slack-client.js",
    "node_modules/**/*",
    "package.json"
  ],
  "mac": {
    "category": "public.app-category.utilities",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ]
  }
}

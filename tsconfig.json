{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "noEmit": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "src/global.d.ts"
  ]
}
